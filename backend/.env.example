# MySQL DSN, e.g. mysql://user:pass@localhost:3306/elogbook
# DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE"
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=elogbook
DB_USERNAME=root
DB_PASSWORD=

# JWT secret key
JWT_SECRET="super_secret_change_me"

# Frontend origin for CORS (in dev you can keep *)
FRONTEND_ORIGIN="http://localhost:5173"

# Base URL used in emails to construct login links (frontend address)
# In development, leave as localhost:5173. In production, set to your deployed frontend URL
APP_BASE_URL="http://localhost:5173"

# Backend server port
PORT=4000

# SMTP (for sending credential emails)
# Configure these to enable email delivery. If unset, emails will be logged to console.
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM="Elogbook <no-reply@example.com>"
